---
import NavBar from "../components/NavBar.astro";
import Trailer from "../components/trailer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
Astro.response.headers.set("Cache-Control", "public,max-age=604800,immutable");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Mazen Omar is a 22 CS student , specialized in graphic design , backend , mobile and machine learning"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://site-assets.fontawesome.com/releases/v6.5.1/css/all.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body id="bg" style="scroll-behavior: smooth;">
    <Trailer />
    <NavBar />
    <slot />
    <footer>
      <div class="footer">
        <h1 style="font-size: 1rem;">© Mazen <span id="currentYear"></span></h1>
        <a
          href="https://www.instagram.com/bailandoart"
          target="_blank"
          style="color:white">Instagram</a
        >
        <a
          href="https://www.linkedin.com/in/mazenomar1/"
          style="color:white"
          target="_blank">Linkedin</a
        >
		<a
          href="https://github.com/mezopeeta/"
          style="color:white"
          target="_blank">Github</a
        >
        <a href="#bg" aria-label="scrollIcon">
          <div style="display:flex;align-items:center;">
            <div class="scrollbg">
              <i class="fa-solid fa-arrow-up" id="scrollIcon"></i>
            </div>
          </div>
        </a>
      </div>

      <div style="display:block">
        <p>Made with ❤ by Mazen</p>
      </div>
    </footer>
    <script src="../ts/animateTrailer.ts"></script>
  </body>
</html>
<style is:global>

  @font-face {
    font-family: ClashGrotesk;
    src: url("font/ClashGrotesk-Regular.woff2") format("woff2");
    font-weight: normal;
    font-display: swap;
  }
  @font-face {
    font-family: ClashGrotesk;
    src: url("font/ClashGrotesk-Medium.woff2") format("woff2");
    font-weight: bold;
    font-display: swap;
  }

  html {
    font-family: ClashGrotesk;
    background-size: 224px;
  }
  html,
  body {
    background-color: #fff;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
  }
  footer {
    background: black;
    color: white;
    text-align: center;
    height: 300px;
  }
  .footer {
    height: 250px;
    align-items: center;
    display: flex;
    justify-content: space-around;
    text-transform: uppercase;
  }
  #scrollIcon {
    color: white;
    margin-top: 12px;
  }

  .scrollbg {
    border: 2px solid white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
  }

  a {
    text-decoration: none;
    color: black;
  }

  @media screen and (max-width: 768px) {
    .footer {
      flex-direction: column;
    }
  }
</style>

<script>
  document.getElementById("currentYear")!.innerHTML = `${new Date().getFullYear()}`;
</script>